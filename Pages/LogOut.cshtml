@page
@model ProjectMaVe.Pages.LogOutModel
@{
    ViewData["Title"] = "User Sign Out";
}

<main class="login-main">
    <div class="login-page bg-light-orange">
        <div class="card login-card shadow-lg border-0 p-4 rounded-4">

            <!-- Header -->
            <header class="text-center mb-4">
                <h1 class="archivo-black-regular text-blue mb-2 fit-sync">FitSync</h1>
                <p class="urbanist-bold text-blue mb-0">Signed Out</p>
            </header>

            <!-- Message -->
            <div class="text-center urbanist-medium mb-3">
                <p class="mb-1">You have been logged out.</p>
                <p class="mb-0">
                    Redirecting to <strong>/LogIn</strong> in
                    <span id="countdown">5</span> seconds.
                </p>
            </div>

            <!-- Manual redirect link -->
            <div class="text-center mt-3">
                <a href="/LogIn" class="urbanist-medium text-blue text-decoration-none">
                    Click here if you're not redirected
                </a>
            </div>

        </div>
    </div>
</main>

<script>
    let seconds = 5;
    const countdown = document.getElementById("countdown");

    const timer = setInterval(() => {
        seconds--;
        countdown.textContent = seconds;

        if (seconds <= 0) {
            clearInterval(timer);
            window.location.href = "/LogIn";
        }
    }, 1000);
</script>

@section Styles {
    <link rel="stylesheet" href="~/css/logout.css" asp-append-version="true" />
}
