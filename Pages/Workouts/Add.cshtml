@page
@model ProjectMaVe.Pages.Workouts.AddModel
@{
    ViewData["Title"] = "Log Workout";
}

<div class="workouts-page">
    <!-- Header -->
    <header class="workouts-header mb-4 py-4 bg-light-orange border-bottom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="urbanist-bold text-blue mb-2">Log Workout</h1>
                    <p class="urbanist-medium text-black mb-0">
                        Record your strength training and cardio activities.
                    </p>
                </div>
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <a href="/Workouts" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Workouts
                    </a>
                </div>
            </div>
        </div>
    </header>

    <main class="workouts-main container mb-5">
        <!-- Add Workout Form -->
        <section id="addWorkoutSection" class="mb-5">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-blue text-light-orange urbanist-bold">
                    <i class="fas fa-dumbbell me-2"></i>Workout Details
                </div>
                <div class="card-body bg-light-orange">
                    <form id="workoutForm">
                        @Html.AntiForgeryToken()
                        <!-- Workout Date -->
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <label class="form-label urbanist-medium text-blue">Workout Date</label>
                                <input type="date" class="form-control rounded-3" id="workoutDate" required />
                            </div>
                        </div>

                        <!-- Strength Exercises Section -->
                        <div class="workout-exercises-section mb-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h3 class="urbanist-bold text-blue mb-0">
                                    <i class="fas fa-dumbbell me-2"></i>Strength Exercises
                                </h3>
                            </div>

                            <div class="table-responsive">
                                <table class="table align-middle mb-0" id="strengthExerciseTable">
                                    <thead class="urbanist-bold text-blue small">
                                        <tr>
                                            <th style="width: 25%;">Exercise</th>
                                            <th style="width: 20%;">Muscle Group</th>
                                            <th style="width: 15%;">Sets</th>
                                            <th style="width: 15%;">Reps</th>
                                            <th style="width: 20%;">Weight (lbs)</th>
                                            <th style="width: 5%;"></th>
                                        </tr>
                                    </thead>
                                    <tbody id="strengthExerciseTableBody" class="urbanist-medium text-black">
                                        <!-- Filled dynamically by JS -->
                                    </tbody>
                                </table>
                            </div>
                            <div class="mt-3 ms-2">
                                <button type="button" class="btn btn-sm btn-yellow" id="addStrengthExerciseBtn">
                                    <i class="fas fa-plus me-2"></i>Add Exercise
                                </button>
                            </div>
                        </div>

                        <!-- Cardio Activities Section -->
                        <div class="workout-cardio-section mb-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h3 class="urbanist-bold text-blue mb-0">
                                    <i class="fas fa-running me-2"></i>Cardio Activities
                                </h3>
                            </div>

                            <div class="table-responsive">
                                <table class="table align-middle mb-0" id="cardioTable">
                                    <thead class="urbanist-bold text-blue small">
                                        <tr>
                                            <th style="width: 40%;">Activity</th>
                                            <th style="width: 30%;">Duration (hr:min:sec)</th>
                                            <th style="width: 25%;">Distance (mi)</th>
                                            <th style="width: 5%;"></th>
                                        </tr>
                                    </thead>
                                    <tbody id="cardioTableBody" class="urbanist-medium text-black">
                                        <!-- Filled dynamically by JS -->
                                    </tbody>
                                </table>
                            </div>
                            <div class="mt-3 ms-2">
                                <button type="button" class="btn btn-sm btn-yellow" id="addCardioActivityBtn">
                                    <i class="fas fa-plus me-2"></i>Add Activity
                                </button>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <a href="/Workouts" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-blue">
                                <i class="fas fa-save me-2"></i>Save Workout
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </section>

        <!-- Quick Tips -->
        <section class="tips-section">
            <div class="card border-0 rounded-4 shadow-sm">
                <div class="card-body bg-light-orange">
                    <h5 class="urbanist-bold text-blue mb-3">
                        <i class="fas fa-lightbulb me-2"></i>Quick Tips
                    </h5>
                    <ul class="urbanist-medium text-black mb-0">
                        <li class="mb-2">Add at least one strength exercise or cardio activity to log your workout</li>
                        <li class="mb-2">Weight is optional for bodyweight exercises</li>
                        <li class="mb-2">Distance is optional for cardio activities like stationary biking</li>
                        <li>You can mix strength and cardio in the same workout session</li>
                    </ul>
                </div>
            </div>
        </section>
    </main>
</div>

@section Scripts {
    <script src="~/js/workouts-add.js" asp-append-version="true" defer></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/workouts.css" asp-append-version="true" />
}