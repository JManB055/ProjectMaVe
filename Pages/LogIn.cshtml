@page
@model ProjectMaVe.Pages.LoginModel
@{
    ViewData["Title"] = "User Login";
}
<div class="login-page bg-light-orange d-flex align-items-center justify-content-center min-vh-100">
    <div class="card login-card shadow-lg border-0 p-4 rounded-4">
        <div class="text-center mb-4">
            <h1 class="archivo-black-regular text-blue mb-2">FitSync</h1>
            <p class="urbanist-bold text-blue mb-0">Welcome Back</p>
        </div>

        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <div class="mb-3">
                <label asp-for="UserName" class="form-label urbanist-bold text-blue">Username</label>
                <input asp-for="UserName" type="text" class="form-control form-control-lg rounded-3" placeholder="Enter your username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label urbanist-bold text-blue">Password</label>
                <input asp-for="Password" type="password" class="form-control form-control-lg rounded-3" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid mt-4">
                <input asp-page-handler="LogIn" type="submit" value="Sign In" class="btn btn-signin-primary btn-lg" />
            </div>

            <div class="text-center mt-3">
                <span class="urbanist-medium">Don't have an account?</span>
                <a asp-page="/NewUser" class="urbanist-bold text-blue ms-1">Create one</a>
            </div>
        </form>
    </div>
</div>