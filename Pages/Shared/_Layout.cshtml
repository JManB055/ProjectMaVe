@using Microsoft.AspNetCore.Mvc.Razor

@functions {
    // Helper to add page-specific body classes
    public string RenderBodyClass()
    {
        // Get the current page path
        var pagePath = Context.Request.Path.Value?.ToLower() ?? "";

        // Add vertical centering class only for login/new user pages
        if (pagePath.Contains("/newuser") || pagePath.Contains("/login"))
        {
            return "align-items-center centered-page";
        }

        return "";
    }
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectMaVe</title>
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/brand.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectMaVe.styles.css" asp-append-version="true" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Urbanist:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Navigation -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-blue border-bottom box-shadow fixed-top" aria-label="Main navigation">
            <div class="container">
                <a class="navbar-brand urbanist-bold" asp-area="" asp-page="/Index" aria-label="FitSync home">
                    FitSync
                </a>
                
                <button class="navbar-toggler" 
                        type="button" 
                        data-bs-toggle="collapse" 
                        data-bs-target="#navbarContent" 
                        aria-controls="navbarContent"
                        aria-expanded="false" 
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Workouts">Workouts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/AboutUs">About Us</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a class="btn btn-yellow" asp-area="" asp-page="/LogIn" role="button">Sign In</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="flex-grow-1 d-flex justify-content-center @RenderBodyClass()" style="padding-bottom:1rem;">
        <main role="main" class="w-100">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - ProjectMaVe - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
