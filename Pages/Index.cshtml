@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@* ===============================
    Hero Section (Top Header)
    - Displays branding and main tagline
    - Includes primary CTA button linking to the New User registration page
   =============================== *@
<header class="bg-gradient-blue-orange text-light-orange mb-4 full-bleed">
    <div class="container text-center py-6">
        <h1 class="display-2 archivo-black-regular text-yellow mb-3">FitSync</h1>
        <p class="h2 urbanist-bold text-light-orange mb-4">
            Personalized Workouts. Simplified Tracking. Real Results.
        </p>

        <p class="lead urbanist-medium mx-auto mb-4" style="max-width: 800px;">
            Take control of your fitness journey with FitSync. Our platform adapts to your goals, your schedule, and your progress, providing personalized workouts that evolve with you. Track your achievements, visualize your growth, and stay motivated every step of the way. Whether you're just starting out or pushing toward new personal bests, FitSync makes reaching your fitness potential simple, efficient, and enjoyable.
        </p>

        <a asp-page="/NewUser" class="btn btn-yellow mt-3 btn-lg" role="button">
            Start Your Free Plan
        </a>
    </div>
</header>

<main>

    @* ===============================
        Image + Text Section
        - Highlights the core concept of FitSync
       =============================== *@
    <section class="container my-5 py-4">
        <div class="row align-items-center g-4">
            
            @* --- Image Column --- *@
            <div class="col-md-6">
                <img src="~/images/fitness.jpg" 
                    alt="Group of three working out together" 
                    class="img-fluid rounded shadow-lg">
            </div>

            @* --- Text Column --- *@
            <div class="col-md-5 offset-md-1">
                <h2 class="urbanist-bold text-blue mb-3">All Your Training, All in One Place</h2>
                <p class="urbanist-medium mb-0">
                    No matter where you are in your fitness journey, FitSync is the best way to push yourself and reach new goals. Designed for beginners and seasoned athletes alike, FitSync helps you stay on track with personalized workouts, detailed progress tracking, and easy-to-use tools to optimize every session.
                </p>
            </div>
        </div>
    </section>

    @* ===============================
        Features Section
        - Showcases three key benefits of FitSync
       =============================== *@
    <section class="container my-5">
        <h2 class="text-center urbanist-bold text-blue mb-5">Why Choose FitSync?</h2>

        <div class="row text-center g-4">
            
            @* --- Feature 1: AI-Powered Workout Planning --- *@
            <div class="col-md-4">
                <div class="feature-card h-100">
                    <div class="text-blue mb-3" aria-hidden="true">
                        <i class="fas fa-robot fa-3x"></i>
                    </div>
                    <h3 class="h4 urbanist-bold text-blue mb-3">AI-Powered Workout Planning</h3>
                    <p class="urbanist-medium mb-0">
                        Get a custom routine generated specifically for your body, goals, and history.
                    </p>
                </div>
            </div>

            @* --- Feature 2: Easy, Flexible Tracking --- *@
            <div class="col-md-4">
                <div class="feature-card h-100">
                    <div class="text-blue mb-3" aria-hidden="true">
                        <i class="fas fa-hand-pointer fa-3x"></i>
                    </div>
                    <h3 class="h4 urbanist-bold text-blue mb-3">Easy, Flexible Tracking</h3>
                    <p class="urbanist-medium mb-0">
                        Track your progress effortlessly. Manually enter workouts or integrate with fitness APIs like Fitbit.
                    </p>
                </div>
            </div>

            @* --- Feature 3: Visualize Your Progress --- *@
            <div class="col-md-4">
                <div class="feature-card h-100">
                    <div class="text-blue mb-3" aria-hidden="true">
                        <i class="fas fa-chart-line fa-3x"></i>
                    </div>
                    <h3 class="h4 urbanist-bold text-blue mb-3">Visualize Your Progress</h3>
                    <p class="urbanist-medium mb-0">
                        View detailed performance graphs and statistics to track progress over time and stay motivated.
                    </p>
                </div>
            </div>
        </div>
    </section>
        
    @* ===============================
        Call-to-Action Section (CTA)
        - Provides returning users with a direct login option
       =============================== *@
    <section class="container my-5 mb-5 pb-5">
        <hr class="my-5">
        
        <div class="text-center">
            <h2 class="h4 urbanist-bold text-blue mb-3">Already have an account?</h2>
            <a asp-page="/LogIn" class="btn btn-yellow btn-lg px-5" role="button">
                Log In Now
            </a>
        </div>
    </section>

</main>

@section Scripts {
    @* ===============================
        External Dependencies
        - FontAwesome (Free CDN)
        - Used for feature icons and visual elements
       =============================== *@
    <link rel="stylesheet" 
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" 
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" 
        crossorigin="anonymous" 
        referrerpolicy="no-referrer" />
}
