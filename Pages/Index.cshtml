@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<main class="landing-main">

    <!-- Hero Section -->
    <section class="hero bg-gradient-blue-orange text-light-orange">
        <h1 class="display-2 archivo-black-regular text-yellow mb-5">FitSync</h1>
        <p class="h2 urbanist-bold text-light-orange mb-4">
            Personalized Workouts. Simplified Tracking. Real Results.
        </p>

        <p class="lead urbanist-medium mb-4">
            FitSync adapts to your goals, schedule, and progress. Get personalized workouts, track achievements, and visualize growth. Simple, efficient, and built for you.
        </p>

        <a asp-page="/NewUser" class="btn btn-yellow mt-3 btn-lg" role="button">
            Start Your Free Account
        </a>
    </section>

    <hr class="my-3">

    <!-- Image + Text Section -->
    <section class="image-text-section container">
        <div class="row align-items-center g-4">
            <div class="col-md-6">
                <img src="~/images/fitness.jpg" 
                    alt="People exercising together in a gym" 
                    class="img-fluid rounded shadow-lg">
            </div>
            <div class="col-md-5 offset-md-1">
                <h2 class="urbanist-bold text-blue mb-3">All Your Training, All in One Place</h2>
                <p class="urbanist-medium mb-0">
                    FitSync works for beginners and experienced lifters alike. Generate AI workouts, log your training, and track progress in a clean dashboard. Stay consistent and improve each session.
                </p>
            </div>
        </div>
    </section>

    </section>

    <hr class="my-3">

    <!-- Features Section -->
    <section class="features-section container">
        <h2 class="text-center urbanist-bold text-blue mb-4">Why Choose FitSync?</h2>
        <div class="row text-center g-4">
            <div class="col-md-4">
                <div class="feature-card h-100">
                    <div class="text-blue mb-3" aria-hidden="true">
                        <i class="fas fa-robot fa-3x"></i>
                    </div>
                    <h3 class="h4 urbanist-bold text-blue mb-3">AI-Powered Workout Planning</h3>
                    <p class="urbanist-medium mb-0">
                        Custom routines generated for your body, goals, and history.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card h-100">
                    <div class="text-blue mb-3" aria-hidden="true">
                        <i class="fas fa-hand-pointer fa-3x"></i>
                    </div>
                    <h3 class="h4 urbanist-bold text-blue mb-3">Easy, Flexible Tracking</h3>
                    <p class="urbanist-medium mb-0">
                        Effortlessly track progress. Log workouts manually or follow AI plans.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card h-100">
                    <div class="text-blue mb-3" aria-hidden="true">
                        <i class="fas fa-chart-line fa-3x"></i>
                    </div>
                    <h3 class="h4 urbanist-bold text-blue mb-3">Customize Your Dashboard</h3>
                    <p class="urbanist-medium mb-0">
                        Visualize your progress with stat based widgets on the dashboard page.
                    </p>
                </div>
            </div>
        </div>
    </section>

    </section>

    <hr class="my-3">

    <!-- How It Works Section -->
    <section class="how-it-works-section text-center bg-gradient-blue-orange text-yellow">
        <div class="container">
            <h2 class="urbanist-bold mb-4 text-yellow">How It Works</h2>
            <div class="row justify-content-center g-4 position-relative">
                <div class="col-md-3 col-sm-6 position-relative">
                    <div class="step-card">
                        <div class="step-icon mb-3 text-yellow"><i class="fas fa-user-plus fa-3x"></i></div>
                        <h3 class="h5 urbanist-bold text-yellow">Create Account</h3>
                    </div>
                    <div class="step-arrow d-none d-md-block text-yellow">
                        <i class="fas fa-chevron-right fa-2x"></i>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 position-relative">
                    <div class="step-card">
                        <div class="step-icon mb-3 text-yellow"><i class="fas fa-magic fa-3x"></i></div>
                        <h3 class="h5 urbanist-bold text-yellow">Generate AI Workouts</h3>
                    </div>
                    <div class="step-arrow d-none d-md-block text-yellow">
                        <i class="fas fa-chevron-right fa-2x"></i>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 position-relative">
                    <div class="step-card">
                        <div class="step-icon mb-3 text-yellow"><i class="fas fa-dumbbell fa-3x"></i></div>
                        <h3 class="h5 urbanist-bold text-yellow">Log Your Training</h3>
                    </div>
                    <div class="step-arrow d-none d-md-block text-yellow">
                        <i class="fas fa-chevron-right fa-2x"></i>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="step-card">
                        <div class="step-icon mb-3 text-yellow"><i class="fas fa-chart-line fa-3x"></i></div>
                        <h3 class="h5 urbanist-bold text-yellow">View Progress</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <hr class="my-3">

    <!-- FAQ Section -->
    <section class="faq-section container">
        <h2 class="text-center urbanist-bold text-blue mb-4">Frequently Asked Questions</h2>
        <div class="accordion" id="faqAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button collapsed urbanist-bold text-blue" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                        Is FitSync free?
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#faqAccordion">
                    <div class="accordion-body urbanist-medium">
                        Yes! FitSync offers a free plan that includes personalized workout generation and progress tracking.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed urbanist-bold text-blue" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        What data do you store?
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#faqAccordion">
                    <div class="accordion-body urbanist-medium">
                        We store your workout history to generate personalized routines and track your progress. View how we handle your data in our <a href="/privacy">privacy policy</a>.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingThree">
                    <button class="accordion-button collapsed urbanist-bold text-blue" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                        Do workouts sync across devices?
                    </button>
                </h2>
                <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#faqAccordion">
                    <div class="accordion-body urbanist-medium">
                        Absolutely. Your data is securely stored in the cloud, so you can access your workouts and history from any device.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingFour">
                    <button class="accordion-button collapsed urbanist-bold text-blue" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                        How does the AI generate routines?
                    </button>
                </h2>
                <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#faqAccordion">
                    <div class="accordion-body urbanist-medium">
                        Our AI analyzes your fitness goals, available equipment, and experience level to create balanced and effective workout plans tailored just for you.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingFive">
                    <button class="accordion-button collapsed urbanist-bold text-blue" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                        Can I use this without equipment?
                    </button>
                </h2>
                <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="headingFive" data-bs-parent="#faqAccordion">
                    <div class="accordion-body urbanist-medium">
                        Yes! You can specify "Bodyweight" as your equipment preference, and the AI will generate effective equipment-free workouts.
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call-to-Action Section -->
    <section class="call-to-action container text-center">
        <hr class="my-4">
        <div class="text-center">
            <h2 class="h4 urbanist-bold text-blue mb-4">Already have an account?</h2>
            <a asp-page="/LogIn" class="btn btn-yellow btn-lg px-5" role="button">
                Sign In Now
            </a>
        </div>
    </section>

</main>

@section Styles {
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
}
