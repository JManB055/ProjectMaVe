@page
@model ProjectMaVe.Pages.WorkoutsModel
@{
    ViewData["Title"] = "Workouts";
}

<div class="workouts-page">
    <!-- Header -->
    <header class="workouts-header mb-4 py-4 bg-light-orange border-bottom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="urbanist-bold text-blue mb-2">Workouts & Plans</h1>
                    <p class="urbanist-medium text-black mb-0">
                        Log your workouts or generate a personalized AI plan.
                    </p>
                </div>
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <button class="btn btn-yellow me-2" id="addWorkoutBtn">
                        <i class="fas fa-plus me-2"></i>Add Workout
                    </button>
                    <button class="btn btn-blue" id="aiWorkoutBtn">
                        <i class="fas fa-robot me-2"></i>AI Workout Plan
                    </button>
                </div>
            </div>
        </div>
    </header>

    <main class="workouts-main container mb-5">
        <!-- Add Workout Section -->
        <section id="addWorkoutSection" class="workout-section mb-5">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-blue text-light-orange urbanist-bold">
                    <i class="fas fa-dumbbell me-2"></i>Add Workout
                </div>
                <div class="card-body bg-light-orange">
                    <form id="workoutForm">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label urbanist-medium text-blue">Workout Type</label>
                                <input type="text" class="form-control rounded-3"
                                        placeholder="e.g. Cardio, Strength, Yoga" required />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label urbanist-medium text-blue">Duration (minutes)</label>
                                <input type="number" class="form-control rounded-3" min="1" required />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label urbanist-medium text-blue">Intensity</label>
                                <select class="form-select rounded-3">
                                    <option>Low</option>
                                    <option>Moderate</option>
                                    <option>High</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label urbanist-medium text-blue">Notes</label>
                                <textarea class="form-control rounded-3" rows="3" placeholder="Optional notes..."></textarea>
                            </div>
                        </div>
                        <div class="text-end mt-3">
                            <button type="submit" class="btn btn-blue">
                                <i class="fas fa-check me-2"></i>Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </section>

        <!-- AI Workout Planner -->
        <section id="aiPlannerSection" class="workout-section mb-5" style="display:none;">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-blue text-light-orange urbanist-bold">
                    <i class="fas fa-robot me-2"></i>Plan Workout with AI
                </div>
                <div class="card-body bg-light-orange">
                    <form id="aiForm">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label urbanist-medium text-blue">Fitness Goal</label>
                                <input type="text" class="form-control rounded-3"
                                        placeholder="e.g. Build muscle, lose weight" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label urbanist-medium text-blue">Workout Frequency</label>
                                <select class="form-select rounded-3">
                                    <option>3 days/week</option>
                                    <option>4 days/week</option>
                                    <option>5 days/week</option>
                                    <option>6 days/week</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label urbanist-medium text-blue">Preferred Activities</label>
                                <textarea class="form-control rounded-3" rows="2"
                                        placeholder="e.g. Running, Weights, Cycling"></textarea>
                            </div>
                        </div>
                        <div class="text-end mt-3">
                            <button type="submit" class="btn btn-blue">
                                <i class="fas fa-magic me-2"></i>Generate Plan
                            </button>
                        </div>
                    </form>

                    <div id="aiPlanResult" class="mt-4" style="display:none;">
                        <h5 class="urbanist-bold text-blue mb-2">Your AI-Generated Plan</h5>
                        <div class="alert alert-info urbanist-medium">
                            <i class="fas fa-spinner fa-spin me-2"></i>Generating your plan...
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Workout History Table -->
        <section class="workout-section">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-blue text-light-orange urbanist-bold">
                    <i class="fas fa-history me-2"></i>Recent Workouts
                </div>
                <div class="card-body bg-light-orange">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="urbanist-bold text-blue small">
                                <tr>
                                    <th>Date</th>
                                    <th>Type</th>
                                    <th>Duration</th>
                                    <th>Intensity</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody id="workoutTableBody" class="urbanist-medium text-black">
                                @* Populated dynamically by workouts.js *@
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>

@section Scripts {
    <script src="~/js/workouts.js" asp-append-version="true" defer></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/workouts.css" asp-append-version="true" />
}
